@{
    @model ClienteModel
    ViewData["Title"] = "Editar Cliente";
}
<div class="">
    <h1>Editar de Cliente</h1>


    <form method="post" asp-controller="Cliente" asp-action="EditarCliente">
        <input type="hidden" asp-for=Id />
 
        <div class="mb-3">
            <label for="Nome">Nome</label>
            <input type="text" class="form-control" asp-for="Nome" placeholder="Nome Completo">
        </div>

        <div class="mb-3">
            <label for="Nome">DataNasc</label>
            <input type="datetime" class="form-control" asp-for="DataNasc" placeholder ="Data de Nascimento">
        </div>

        <div class="mb-3">
            <label for="Nome">CPF</label>
            <input type="number" class="form-control" asp-for="CPF" placeholder="CPF">
        </div>

        <div class="mb-3">
            <label for="End">Endereço</label>
            <input type="text" class="form-control" asp-for="Endereco" placeholder="Endereço Completo">
        </div>

        <div class="mb-3">
            <label for="Nome">CEP</label>
            <input type="number" class="form-control" asp-for="CEP" placeholder ="CEP">
        </div>

        <div class="mb-3">
            <label for="Ctt">Telefone</label>
            <input type="number" class="form-control" asp-for="Telefone" placeholder="Telefone com DDD">
        </div>

        <div class="mb-3">
            <label for="Ctt">Modalidade</label>
            <input type="number" class="form-control" asp-for="Modalidade" placeholder="Modalidade">
        </div>

        <div class="mb-3">
            <label for="Ctt">DataPagto</label>
            <input type="date" class="form-control" asp-for="DataPgto" placeholder="Data de Pagamento">
        </div>

        <a class="btn btn-outline-primary" asp-controller="Cliente" asp-action="IndexCliente">Voltar</a>
        <a class="btn btn-outline-success">Adicionar</a>

    </form>


</div>

