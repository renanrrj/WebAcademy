@{
    @model ClienteModel
    ViewData["Title"] = "Excluir Cliente";
}

<div class="container">
    <h1>Excluir Cliente</h1>


    <form method="post" asp-controller="Cliente" asp-action="ExcluirCliente">

        <h2>"Tem certeza q deseja excluir o registro:"</h2>

        <div class="mb-3">
            <label for="Nome">Nome</label>
            <input type="text" class="form-control" asp-for="Nome" placeholder="Nome Completo" disabled>
        </div>

        <div class="mb-3">
            <label for="datanasc">DataNasc</label>
            <input type="date" class="form-control" asp-for="DataNasc" placeholder="Data de Nascimento" disabled>
        </div>

        <div class="mb-3">
            <label for="cpf">CPF</label>
            <input type="text" class="form-control" asp-for="CPF" placeholder="CPF" disabled>
        </div>

        <div class="mb-3">
            <label for="End">Endereço</label>
            <input type="text" class="form-control" asp-for="Endereco" placeholder="Endereço Completo" disabled>
        </div>

        <div class="mb-3">
            <label for="cep">CEP</label>
            <input type="text" class="form-control" asp-for="CEP" placeholder="CEP" disabled>
        </div>

        <div class="mb-3">
            <label for="Ctt">Telefone</label>
            <input type="text" class="form-control" asp-for="Telefone" placeholder="Telefone com DDD" disabled>
        </div>

        <div class="mb-3">
            <label for="Modali">Modalidade</label>
            <input type="text" class="form-control" asp-for="Modalidade" placeholder="Modalidade" disabled>
        </div>

        <div class="mb-3">
            <label for="dtapgto">DataPagto</label>
            <input type="date" class="form-control" asp-for="DataPgto" placeholder="Data de Pagamento" disabled>
        </div>

        <a class="btn btn-outline-primary w-40" asp-controller="Cliente" asp-action="IndexCliente">Voltar</a>
        <button type="submit" class="btn btn-outline-danger w-40" asp-controller="Cliente" asp-action="ExcluirCliente">Excluir</button>

    </form>


</div>

